<div class="row">
    <div class="col-lg-8">
        <div class="form-group">
            <div id="map" class="full-width" style="height: 500px;"></div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            <div class="panel panel-default">
                <div class="panel-heading text-center text-white bg-logo-blue">
                    <h4>
                        <strong>
                            CEBTAS Portal
                        </strong>
                    </h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @*@Html.Partial("_ModalStateErrors")*@
                            <form action="@Url.Action("Signin", "User")" method="post">
                                @Html.HiddenFor(x => x.Page, new { @Value = "Signin" })
                                @Html.HiddenFor(x => x.RedirectTo)
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Username, "Username")
                                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Password, "Password")
                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                                </div>
                                <div class="form-group m-b-0">
                                    <table class="full-width">
                                        <tr>
                                            <td class="va-m">
                                                <a href="@Url.Action("Reset", "User")">Forgot password?</a>
                                            </td>
                                            <td class="va-m">
                                                <button class="btn btn-primary full-width">Login</button>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
