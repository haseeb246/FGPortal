@model List<CourierConnect.Web.Contracts.RouteStopView>

@if (Model.Count > 0)
{
    <div id="modal" class="modal fade" tabindex="-1" role="dialog">
        <!--modal-width-70pct-->
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Shipment(s)</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group text-right">
                        <button class="btn btn-primary" onclick="printDiv('downloadable');">Print / Download</button>
                    </div>
                    <div id="downloadable" class="form-group">
                        @foreach (var stop in Model)
                        {
                            <table class="table table-bordered">
                                <tr>
                                    <td class="va-m" width="25%"><strong>Post Date</strong></td>
                                    <td class="va-m" width="75%"><span id="rd-sid">@stop.Postdate.ToString("MM/dd/yyyy")</span></td>
                                </tr>
                                <tr>
                                    <td class="va-m" width="25%"><strong>Stop ID</strong></td>
                                    <td class="va-m" width="75%"><span id="rd-sid">@stop.StopId</span></td>
                                </tr>
                                <tr>
                                    <td class="va-m" width="25%"><strong>Address</strong></td>
                                    <td class="va-m" width="75%"><span id="rd-add">@Html.Raw(stop.Address)</span></td>
                                </tr>
                                <tr>
                                    <td class="va-m" width="25%"><strong>Reference</strong></td>
                                    <td class="va-m" width="75%"><span id="rd-ref-1">@stop.Reference</span></td>
                                </tr>
                                <tr>
                                    <td class="va-m" width="25%"><strong>Completed Time</strong></td>
                                    <td class="va-m" width="75%"><span id="rd-cti">@(stop.TimeCompleted?.ToString("MM/dd/yyyy hh:mm tt"))</span></td>
                                </tr>
                                <tr>
                                    <td class="va-m" width="25%"><strong>Pieces</strong></td>
                                    <td class="va-m" width="75%">@stop.Pieces</td>
                                </tr>
                                <tr>
                                    <td class="va-m" width="25%"><strong>Weight</strong></td>
                                    <td class="va-m" width="75%">@stop.Weight</td>
                                </tr>
                                <tr>
                                    <td class="va-m" width="25%"><strong>POD Name</strong></td>
                                    <td class="va-m" width="75%">
                                        @stop.PODText
                                    </td>
                                </tr>
                                <tr>
                                    <td class="va-m" width="25%"><strong>POD Signature</strong></td>
                                    <td class="va-m" width="75%">
                                        <img id="rd-pod-signature" src="@stop.PODSignatureEncoded" style="max-width: 200px;" />
                                    </td>
                                </tr>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="form-group">
        <div class="alert alert-danger text-center">
            <strong>
                No shipment matching your search criteria.
            </strong>
        </div>
    </div>
}